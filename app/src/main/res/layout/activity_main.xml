<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_top_fn"
    android:orientation="vertical">

    <View
        android:id="@+id/ll_state_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:background="@color/bg_white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@color/color_dark_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingTop="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_gridnm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp16" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/dimen_4dp"
                        android:text=""
                        android:textColor="@color/color_text_blue"
                        android:textSize="@dimen/sp14" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_text_blue"
                    android:textSize="@dimen/sp12" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小区"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/tv_commnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textStyle="bold"
                        android:textColor="@color/color_green"
                        android:textSize="@dimen/sp10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="渠道"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/tv_chlnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textStyle="bold"
                        android:textColor="@color/color_green"
                        android:textSize="@dimen/sp10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="基站"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/tv_statnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textStyle="bold"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/sp10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="基站用户"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/tv_statusernum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textStyle="bold"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/sp10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="集团"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/tv_groupnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textStyle="bold"
                        android:textColor="@color/color_blue"
                        android:textSize="@dimen/sp10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="集团成员"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/tv_grpusernum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="--"
                        android:textColor="@color/color_blue"
                        android:textSize="@dimen/sp10" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:background="@color/color_grey_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当日收入"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/tv_todayin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/sp10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当月收入"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/tv_monthin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textStyle="bold"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/sp10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上月收入"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/tv_lastmonthin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textStyle="bold"
                        android:textColor="@color/color_text_blue"
                        android:textSize="@dimen/sp10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当月份额"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/tv_monthshare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textStyle="bold"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/sp10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上月份额"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/tv_lastmonthshare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textStyle="bold"
                        android:textColor="@color/color_text_blue"
                        android:textSize="@dimen/sp10" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:layout_marginTop="-32dp"
        android:layout_marginRight="@dimen/dimen_8dp"
        app:cardBackgroundColor="@color/bg_top_fn"
        app:cardCornerRadius="@dimen/dimen_angle_half"
        app:cardElevation="@dimen/dimen_angle_half"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <android.support.design.widget.TabLayout
            android:id="@+id/processplan_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            app:tabIndicatorColor="@color/blue_colr"
            app:tabIndicatorFullWidth="false"
            app:tabSelectedTextColor="@color/color_white"
            app:tabTextColor="@color/color_grey" />
    </android.support.v7.widget.CardView>


    <android.support.v4.view.ViewPager
        android:id="@+id/processplan_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</LinearLayout>
