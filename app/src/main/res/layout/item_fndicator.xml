<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_paraent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_4dp"
        android:background="@drawable/bg_item_fndicator"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当日收入"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/tv_topnub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100.00"
                android:textColor="@color/color_green"
                android:textSize="@dimen/sp20"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/ll_month_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="任务率 "
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/sp10" />

                            <TextView
                                android:id="@+id/tv_cpratio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textStyle="bold"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/sp10" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_month_nub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:text="1000"
                                android:textColor="@color/color_text_blue"
                                android:textSize="@dimen/sp12" />

                            <TextView
                                android:id="@+id/tv_month_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:text="/20.01%"
                                android:textColor="@color/color_green"
                                android:textSize="@dimen/sp12" />
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="@dimen/dimen_4dp">

                        <ImageView
                            android:id="@+id/im_bg_progress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_while_pro" />

                        <ImageView
                            android:id="@+id/im_progress"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_green_pro" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:text="超时间 "
                            android:textColor="@color/color_blue"
                            android:textSize="@dimen/sp10" />

                        <TextView
                            android:id="@+id/tv_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:text=""
                            android:textStyle="bold"
                            android:textColor="@color/bg_white"
                            android:textSize="@dimen/sp10" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_up_down"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/im_updown_flag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_arrow_up" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:text="+3.15%"
                            android:textColor="@color/color_red"
                            android:textSize="@dimen/sp12" />

                        <TextView
                            android:id="@+id/tv_down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:text="-3.15%"
                            android:textColor="#53EF2D"
                            android:textSize="@dimen/sp12" />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当月净增"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp10" />

                    <TextView
                        android:id="@+id/tv_dayneed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200.33"
                        android:textStyle="bold"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="累计净增"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp10" />

                    <TextView
                        android:id="@+id/tv_dayupratio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+1.02"
                        android:textStyle="bold"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="目标值"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp10" />

                    <TextView
                        android:id="@+id/tv_monthupratio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12.30"
                        android:textStyle="bold"
                        android:textColor="@color/color_blue"
                        android:textSize="@dimen/sp10" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_48dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_marginRight="@dimen/dimen_8dp"
        android:background="@mipmap/bg_rank_flag"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_4dp"
        android:paddingTop="@dimen/dimen_4dp"
        android:paddingRight="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排名"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp10" />

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="12"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp10"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>